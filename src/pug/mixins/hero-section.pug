include ./main-btn
include ./sale-badge

mixin hero-section(data)
  section.lw-promo-hero(style=`background-image: url("./assets/img/${data.bg}")`)
    .lw-container
      +sale-badge('Акция!')
      h1!= data.title
      p.lw-main-text!= data.desc
      img(src=`./assets/img/${data.img}` alt= data.title width= data.imgWidth height= data.imgHeight)

      +main-btn('Заказать')
